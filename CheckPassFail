/* 11/25/2018
Practice with Scanner --- This program will read user input and decide whether use has passed the course or not.
*/

package tameana;
import java.util.Scanner;

class CheckPassFail{
	public static void main(String[] args) {
		
		System.out.println("Enter your overall grade for this semester: ");
		
		Scanner check = new Scanner(System.in);
		int grade = check.nextInt();
		
		
		System.out.println(check.nextLine());;
		
		if (grade >= 50) {
			System.out.println("You have passed! Your grade, " +grade);
			System.out.print("qualifiies as passing.");
		}else {
			System.out.println("You have failed.");
		}
	}
}
